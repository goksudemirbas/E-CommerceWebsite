@using ETicaretMvc.Models.Sınıflar;
@model List<Cariler>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
    <table class="table table-striped">
        <tr>
            <th>CariID</th>
            <th>Ad</th>
            <th>Soyad</th>
            <th>Şehir</th>
            <th>Mail</th>
            <th>Sil</th>
            <th>Güncelle</th>
            <th>Detaylar</th>
        </tr>
        @foreach (var x in Model)
        {

    <tr>
        <td>@x.CariId</td>
        <td>@x.CariAd</td>
        <td>@x.CariSoyad</td>
        <td>@x.CariSehir</td>
        <td>@x.CariMail</td>
        <td><a href="." class="btn btn-danger">Sil</a></td>
        <td><a href="." class=" btn btn-warning">Güncelle</a></td>
        <td><a href="." class="btn btn-default" style="background-color:lightcoral; ">Satış Geçmişi</a></td>
    </tr>
        }
        </table>
    <a href="/Cari/YeniEkle/" class="btn btn-info">Yeni Cari Ekle</a>
